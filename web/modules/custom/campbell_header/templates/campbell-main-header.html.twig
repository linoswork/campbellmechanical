<header class="cm-header section-grid section-veil grid-light" role="banner">
  <div class="cm-wrap cm-header__grid grid-content">
    <!-- Left: Logo -->
    <div class="cm-header__logo">
      {% if logo.src %}
        <a href="{{ path('<front>') }}" aria-label="{{ site_name ?? 'Home' }}">
          <img src="{{ logo.src }}" alt="{{ logo.alt|default('') }}">
        </a>
      {% endif %}
    </div>

    <!-- Center: Primary menu -->
    <nav class="cm-header__nav" role="navigation" aria-label="Primary">
      {{ primary_menu }}
    </nav>

    <!-- Right: Phone + CTA -->
    <div class="cm-header__cta">
      {% if phone.show and phone.href %}
        <a class="cm-header__phone" href="{{ phone.href }}">{{ phone.text }}</a>
      {% endif %}
      <a class="btn-quote" href="{{ cta.url }}"{% if cta.new_tab %} target="_blank" rel="noopener noreferrer"{% endif %}>
        {{ cta.label }}
      </a>
    </div>
  </div>
</header>
